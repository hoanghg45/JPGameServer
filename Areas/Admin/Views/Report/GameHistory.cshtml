@section scripts{

    <script>

        $(function List() {
            $.ajax({
                type: "GET",
                url: "/Report/List",
                success: function (data) {
                    var game = `<option value="-1">Chọn Máy</option>`
                    var card = `<option value="-1">Chọn Thẻ</option>`
                    $.each(data.game, function (k, v) {
                        game += `<option value="${v.Id}">${v.Name}</option>`
                    })
                    $.each(data.card, function (k, v) {
                        card += `<option value="${v.Code39}">${v.Code39}</option>`
                    })
                    $('#game').append(game)
                    $('#card').append(card)
                },
                error: function () {
                    // Xử lý lỗi (nếu cần thiết)
                    // Ẩn loading indicator và cho phép lấy dữ liệu tiếp theo
                    $('.spinner').hide();
                    isLoadingData = false;
                }
            })
        })
        var page = 1;
        var isLoadingData = false;
        var isFull = false;
        (function DataTable() {

            ShowTable(page)
            $('.table-responsive').scroll(function () {
                /* var element = $(this)[0];*/
                var scrollTop = $(this).scrollTop() + 3;
                var scrollHeight = $(this)[0].scrollHeight;
                var windowHeight = $(this).outerHeight();

                if (scrollTop + windowHeight >= scrollHeight && !isLoadingData && !isFull) {

                    // Đạt đến cuối trang và không đang lấy dữ liệu
                    $('.spinner').show();
                    // Gọi hàm để lấy dữ liệu tiếp theo
                    ScrollData(page);
                }
            });
            InitSearch()
        })()

        function ShowTable(pagenumber, from, to) {
            var game = $('#game option:selected').val()
            var card = $('#card option:selected').val()
            $.ajax({
                type: "GET",
                url: "/Admin/Report/ReportGame",
                data: {
                    page: pagenumber,

                    from,
                    to,
                    game,
                    card
                },

                datatype: 'json',
                success: function (data) {
                    let $table = $('#reporttable')
                    let body = $table.find('tbody')
                    isFull = false
                    //Hiển thị dữ liệu trong bảng

                    if (data.data && data.data.length > 0) {
                        $.each(data.data, function (i, v) {
                            let tr = `<tr>
                                    <th scope="row">${((10 * (data.pageCurrent - 1)) + (i + 1))}</th>

                                    <td>${formatDate(v.CreateDate)} ${getTime(v.CreateDate)}</td>

                                    <td>${v.Name}</td>

                                    <td>${v.Code39}</td>
                                    <td>${v.Price.toLocaleString('en-US')}</td>


                                    </tr>`


                            body.append(tr)
                        })
                        pagenumber++
                        page = pagenumber



                    } else {
                        isFull = true
                    }
                    $('.spinner').hide();
                    isLoadingData = false;
                    $('#QtyNote').text(`Hiển thị ${data.to} trên ${data.total} dữ liệu`)
                },
                error: function () {
                    // Xử lý lỗi (nếu cần thiết)
                    // Ẩn loading indicator và cho phép lấy dữ liệu tiếp theo
                    $('.spinner').hide();
                    isLoadingData = false;
                }
            })



        }
     
        function InitSearch() {

                $('#kt_datatable_from_query, #kt_datatable_to_query').on('change', function (e) {

                    SearchData()
                });
    

        }
        function SearchData() {
            let from = $('#kt_datatable_from_query').val().trim()
            let to = $('#kt_datatable_to_query').val().trim()

            $('#reporttable').find('tbody').empty()
            ShowTable(1, from, to)
        }
        function ScrollData(page) {
            let from = $('#kt_datatable_from_query').val().trim()
            let to = $('#kt_datatable_to_query').val().trim()



            ShowTable(page, from, to)


        }

        $('#game, #card').on('change', function (e) {

            SearchData()
        });

        function excel() {
            let from = $('#kt_datatable_from_query').val().trim()
            let to = $('#kt_datatable_to_query').val().trim()
            var game = $('#game option:selected').val()
            var card = $('#card option:selected').val()
            $.ajax({
                type: "GET",
                url: "/Admin/Report/ExportToExcelGameHistory",
                data: {
                    from,
                    to,
                    game,
                    card
                },

                datatype: 'json',
                success: function (data) {
                    window.location.href = `/Admin/Report/ExportToExcelGameHistory?from=${from}&to=${to}&game=${game}&card=${card}`
                },
                  error: function () {
                    // Xử lý lỗi (nếu cần thiết)
                    // Ẩn loading indicator và cho phép lấy dữ liệu tiếp theo
                    $('.spinner').hide();
                    isLoadingData = false;
                }
            })
        }
    </script>
