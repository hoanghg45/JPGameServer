
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Subheader-->
    <div class="subheader py-2 py-lg-6 subheader-solid" id="kt_subheader">
        <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <!--begin::Info-->
            <div class="d-flex align-items-center flex-wrap mr-1">
                <!--begin::Page Heading-->
                <div class="d-flex align-items-baseline flex-wrap mr-5">
                    <!--begin::Page Title-->
                    <h5 class="text-dark font-weight-bold my-1 mr-5">Tạo tài khoản</h5>
                    <!--end::Page Title-->
                    <!--begin::Breadcrumb-->
                    <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                        <li class="breadcrumb-item">
                            <a href="" class="text-muted">Ứng dụng</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="" class="text-muted">Tài khoản</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="" class="text-muted">Tạo tài khoản</a>
                        </li>
                    </ul>
                    <!--end::Breadcrumb-->
                </div>
                <!--end::Page Heading-->
            </div>
            <!--end::Info-->
            <!--begin::Toolbar-->
            <div class="d-flex align-items-center">
              
            </div>
            <!--end::Toolbar-->
        </div>
    </div>
    <!--end::Subheader-->
    <!--begin::Entry-->
    <div class="d-flex flex-column-fluid">
        <!--begin::Container-->
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <!--begin::Card-->
                    <div class="card card-custom gutter-b example example-compact">
                        <div class="card-header">
                            <h3 class="card-title">Thông tin tài khoản</h3>

                        </div>
                        <!--begin::Form-->
                        <form id="CreateAccForm" class="form">
                            <div class="card-body">
                                <div class="form-group fv-plugins-icon-container">
                                    <label>Tên tài khoản</label>
                                    <input type="text" class="form-control form-control-solid form-control-lg" name="AccountName" placeholder="Tên tài khoản">


                                </div>
                                <!--end::Input-->
                                <!--begin::Input-->
                                <div class="row">
                                    <div class="col-xl-6">
                                        <!--begin::Input-->
                                        <div class="form-group fv-plugins-icon-container">
                                            <label>Họ và tên</label>
                                            <input type="text" class="form-control form-control-solid form-control-lg" placeholder="Họ và tên" name="FullName">
                                            <!--end::Input-->
                                        </div>
                                    </div>
                                    <div class="col-xl-6">
                                        <div class="form-group fv-plugins-icon-container">
                                            <!--begin::Input-->
                                            <label>Ngày sinh</label>
                                            <input type="date" class="form-control form-control-solid form-control-lg" placeholder="Ngày sinh" name="DateOfBirth">
                                            <!--end::Input-->
                                        </div>
                                    </div>
                                </div>

                                <!--end::Input-->
                                <div class="row">
                                    <div class="col-xl-6">
                                        <!--begin::Input-->
                                        <div class="form-group fv-plugins-icon-container">
                                            <label>Địa chỉ Email</label>
                                            <input type="email" class="form-control form-control-solid form-control-lg" placeholder="Email" name="Email">

                                        </div>
                                        <!--end::Input-->
                                    </div>
                                    <div class="col-xl-6">
                                        <!--begin::Input-->
                                        <div class="form-group fv-plugins-icon-container">
                                            <label>Số điện thoại</label>
                                            <input type="text" class="form-control form-control-solid form-control-lg" placeholder="Số điện thoại" name="Phone">

                                        </div>
                                        <!--end::Input-->
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <a class="btn btn-primary mr-2 " href="@Url.Action("Index","AccountsAdmin")">Trở về danh sách</a>
                                <button type="button" class="btn btn-success mr-2 btnCreate">Tạo</button>
                            </div>
                        </form>
                        <!--end::Form-->
                    </div>
                    <!--end::Card-->

                </div>

            </div>
        </div>
        <!--end::Container-->
    </div>
    <!--end::Entry-->
</div>
<script src="~/Areas/assets/admin/accounts/CreateAccount.js"></script>